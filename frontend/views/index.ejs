<!doctype html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/static/css/style.css">
    <link rel="stylesheet" href="/static/css/carroussel.css">

    <% if (stylesheets) { %>
        <% stylesheets.forEach(stylesheet=> { %>
            <link rel="stylesheet" href="<%= stylesheet %>">
            <% }) %>
                <% } %>
</head>

<body>



    <%- include('partials/header') %>

        <main>
            <!-- Carrousel pour la catÃ©gorie 1 -->
            <section>
                <div class="carousel" id="carousel-category-1">
                    <button class="carousel-control prev" onclick="prevSlide('carousel-category-1')">&#10094;</button>
                    <div class="carousel-inner">
                        <% products.filter(p=> p.category_id === 1).forEach(product => { %>
                            <div class="carousel-item">
                                <a href="/products/<%=product.product_id%>">
                                    <img src="/static/images/<%= product.name%>.jpg" alt="<%= product.name %>"
                                        width=300px height=300>
                                    <div class="carousel-caption">
                                        <h3>
                                            <%= product.name %>
                                        </h3>
                                        <p>$<%= product.price %>
                                        </p>
                                    </div>
                                </a>
                            </div>
                            <% }) %>
                    </div>
                    <button class="carousel-control next" onclick="nextSlide('carousel-category-1')">&#10095;</button>
                </div>
            </section>

            <section>
